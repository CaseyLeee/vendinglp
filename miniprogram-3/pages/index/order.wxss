/* pages/index/order.wxss */

.tablebody{
  display: flex;
  background-color: gainsboro;
  width: 100%;
  padding: 20rpx 0 20rpx 20rpx;
  
  color: #969799;
  font-size: 24rpx;
  box-sizing:border-box;
  margin-bottom: 20rpx;
  border-radius: 20rpx;
  position: relative;
}
.orderdet{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding:0 0 0 20rpx;
}
.itemtop{
  padding: 0 20rpx 0 0;
  display: flex;
  width: 100%;
  justify-content: space-between;
}
.price{ 
  display: flex;
align-items: center;
}
.status{ 
  display: flex;
align-items: center;
padding-right: 20rpx;
}

.pic{
  width: 180rpx;
  height: 180rpx;
  border-radius: 20rpx;
}
.nameitem{
  display: flex;
  justify-content: space-between;
  padding-right: 10rpx;
}

