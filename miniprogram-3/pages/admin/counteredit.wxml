<van-nav-bar title="编辑" style="width: 100%;position:fixed;top: 0;">
  <van-icon name="arrow-left" slot="left" size="60rpx" bindtap="toinex" />
</van-nav-bar>

<view class="edit">
 
    <van-field
    model:value="{{ name }}"
    clearable
    label="设备名"
    placeholder="请输入设备名称"
    left-icon="todo-list-o"
  />
  <van-field
    model:value="{{ remark}}"
    clearable
    label="备注"
    placeholder="请输入设备备注"
    left-icon="todo-list-o"
  />

  <van-button type="primary" block bindtap="edit">修改</van-button>


</view>
<van-toast id="van-toast" />