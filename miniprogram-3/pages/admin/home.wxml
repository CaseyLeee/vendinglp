<van-nav-bar title="" style="width: 100%;position:fixed;top: 0;">
  <van-icon name="arrow-left" slot="left" size="60rpx" bindtap="toinex" />
</van-nav-bar>
<view class="panel">
  <view class="userinfo">
    <view class="useravatar">

      <image wx:if="{{userInfo.logo}}" class="avatar" mode="scaleToFill" src="{{imgurl+userInfo.logo}}"></image>
      <text>{{userInfo.name}}</text>

    </view>

    <van-button size="small" type="danger" bindtap="goout">退出</van-button>
  </view>
  <view class="butn">

    <view class="butnitem" bindtap="godoormg">
      待补货柜({{OutOfStockQuantity}})
    </view>

    <view class="butnitem butnitemnobr">
      今日销售
    </view>

  </view>
</view>

<view class="oper">
  <van-divider />
  <view bindtap="gocounter">货柜管理</view>
  <van-divider />
  <view>销售数据</view>
  <van-divider />
</view>
<van-toast id="van-toast" />